{
  "name": "feijoada-tres",
  "version": "0.0.1",
  "description": "Learning Karma with ES6",
  "repository": "https://github.com/ninetails/feijoada-tres",
  "main": "index.js",
  "scripts": {
    "prestart": "rm -rf build",
    "start": "NODE_ENV=development ./node_modules/.bin/webpack-dev-server -d --hot --port 8000",
    "prebuild": "rm -rf build",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack -p",
    "pretest": "rm -rf reports",
    "test": "NODE_ENV=test ./node_modules/.bin/karma start"
  },
  "author": "Carlos Kazuo <carlos.kazuo@grupofolha.com.br>",
  "license": "MIT",
  "config": {
    "buildDir": "build",
    "devServerHost": "localhost",
    "devServerPort": "8000"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": 1
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel": "^6.5.2",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "eslint": "^2.1.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-react": "^2.3.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-flow-vars": "^0.1.3",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-react": "^3.16.1",
    "eslint-plugin-standard": "^1.3.2",
    "file-loader": "^0.8.5",
    "html-webpack-plugin": "^2.9.0",
    "isparta": "^4.0.0",
    "isparta-loader": "^2.0.0",
    "istanbul": "^0.4.2",
    "karma": "^0.13.21",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs2-launcher": "^0.5.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "0.0.24",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "postcss-loader": "^0.8.1",
    "webpack": "^1.12.13",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  }
}
